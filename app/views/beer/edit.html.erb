<form action="/beer/<%=@beer.id%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h3>Update a beer:</h3>
  <p>Name:</p>
  <input type='text' name='beer[name]' value="<%=@beer.name%>"/><br/>
  <p>Number of Employees:</p>
  <input type='integer' name='beer[vendor_lead_time]' value="<%=@beer.vendor_lead_time%>"/><br/>
  <p>Employee Owned:</p>
  <input type='boolean' name='beer[bottled]'value="<%=@beer.bottled%>"/><br/>
  <input type='submit' name='Update Brewery' value='Update Brewery'/>
</form>

<%= link_to "Employee Index", "/employees"%>
<%= link_to "Restaurant Index", "/restaurants"%>

<form action="/restaurants/<%= @restaurant.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h3>Update a Restaurant </h3>
  <p>Name:</p>
  <input type='text' name='restaurant[name]' value="<%= @restaurant.name %>"/><br/>
  <p>Number of Seats:</p>
  <input type='integer' name='restaurant[seats]' value="<%= @restaurant.seats %>"/><br/>
  <p>Serves Alcohol:</p>
  <input type='boolean' name='restaurant[serve_liquor]' value="<%= @restaurant.serve_liquor %>"/><br/>
  <input type='submit' name='Update Restaurant' value='Update Restaurant'/>
</form>

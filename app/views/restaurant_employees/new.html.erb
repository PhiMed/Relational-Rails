<a href="/employee">Employee Index</a>
<a href="/restaurant">Restaurant Index</a>

<form action=<%="/restaurant/#{@restaurant.id}/employee" %> method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p><h3>Enter a new employee:</h3></p>
  <p>Name:</p>
  <input type='text' name='employee[name]'/><br/>
  <p>Weekly Hours:</p>
  <input type='integer' name='employee[weekly_hours]'/><br/>
  <p>Over 21:</p>
  <input type='boolean' name='employee[over_21]'/><br/>
  <p>Restaurant:</p>
  <input type='integer' name='employee[restaurant_id]'/><br/>
  <input type='submit' name='Create Employee' value='Create Employee'/>
</form>

<a href="/employees">Employee Index</a>
<a href="/restaurants">Restaurant Index</a>

<h2>Employee Records by Restaurant</h2>

<a href= <%="/restaurants/#{@restaurants.id}/employees/new"%> ><h3>Create Employee</h3></a>

<%= link_to "Sort Employees Alphabetically", restaurants_employees_path(sort_by: "name") %>

<% @employees.each do |employee| %>
  <p>Name: <%= employee.name %></p>
  <p>ID: <%= employee.id %></p>
  <p>Weekly Hours: <%= employee.weekly_hours %></p>
  <p>Over 21: <%= employee.over_21 %></p>
  <p>Created At: <%= employee.created_at %></p>
  <p>Updated At: <%= employee.updated_at %></p>
  <p>Restaurant ID: <%= employee.restaurant_id %></p>
  <a href= <%="/employees/#{employee.id}/edit"%> >Update Employee</a>

  <form action="/restaurants/<%= @restaurants.id %>/employees" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Employee"style="background:none; border-width:0px; color:blue; text-decoration:underline;cursor:pointer;font-family:timesnewroman;font-size:100%"/>
  </form>
  <hr>
<% end %>

<form action=<%=restaurants_employees_path(hours: "hours")%> method="get">
  <label for="hours">Only return records with more than <input type="text" id="hours" name="hours"> weekly hours</label><br>
  <input type="submit" value="Submit">
</form>

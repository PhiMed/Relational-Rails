<form action=<%="/breweries/#{@brewery.id}/beers"%> method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <h3>Enter a new beer:</h3>
  <p>Name:</p>
  <input type='text' name='beer[name]'/><br/>
  <p>Vendor Lead Time:</p>
  <input type='integer' name='beer[vendor_lead_time]'/><br/>
  <p>Bottled:</p>
  <input type='boolean' name='beer[bottled]'/><br/>
  <input type='submit' name="Create beer" value="Create beer"/>
</form>
